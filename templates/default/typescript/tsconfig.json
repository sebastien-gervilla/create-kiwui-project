{
    "include": [
        "src", 
        "kiwui-env.d.ts"    
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "jsx": "preserve",
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "lib": [
          "dom",
          "dom.iterable",
          "esnext"
        ],

        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,

        "strict": true,
        "noEmit": true,
        "incremental": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,

        "paths": {
            "@/*": ["./src/*"]
        }
    }
}